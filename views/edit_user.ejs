<%- include('layout/header') %>
<main>
  <div class="center-contant add-user-section">
    <form
      action="/update/<%= user._id %>"
      method="post"
      class="user-create-form"
      enctype="multipart/form-data"
    >
      <h2 class="new-user-title">Edit User (<%= user.name %>)</h2>
      <div class="main-form">
        <div class="singal-input">
          <label for="name">Name</label>
          <input
            type="text"
            name="name"
            placeholder="Enter Nmae"
            value="<%= user.name %>"
            id="name"
            required
          />
        </div>
        <div class="singal-input">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            placeholder="Enter Email"
            value="<%= user.email %>"
            id="email"
            required
          />
        </div>
        <div class="singal-input">
          <label for="phone">Phone</label>
          <input
            type="number"
            name="phone"
            value="<%= user.phone %>"
            placeholder="Enter Phone"
            id="phone"
          />
        </div>
        <div class="img-flede">
          <img src="http://localhost:3001/<%= user.image %>" width="100" />
        </div>
        <input type="hidden" name="old_image" value="<%= user.image %>" />
        <div class="singal-input">
          <label for="image">Image</label>
          <input type="file" name="image" id="image" />
        </div>

        <button type="submit" class="form-submit-btn">Update User</button>
      </div>
    </form>
  </div>
</main>
<%- include('layout/footer') %>
